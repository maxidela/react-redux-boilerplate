{
  "parser"  : "babel-eslint",
  "extends" : [
    // http://standardjs.com/rules.html#javascript-standard-style
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    // Enforce use of semi-colons
    "semi": ["error", "always"],
    // Max length 120 chars
    "max-len": [2, 120, 2],
    // Enforce consistent spacing around * operators in generator functions
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1
  }
}
